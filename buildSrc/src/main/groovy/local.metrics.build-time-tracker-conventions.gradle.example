/**
 * Configuration for tracking how long a build takes, using `net.rdrei.android.buildtimetracker`
 */

plugins {
    id "net.rdrei.android.buildtimetracker"
}

buildtimetracker {
    reporters {
        csv {
            output "build/times.csv"
            append true
            header false
        }

        summary {
            ordered false
            threshold 50
            barstyle "unicode"
        }

        csvSummary {
            csv "build/times.csv"
        }
    }
}

